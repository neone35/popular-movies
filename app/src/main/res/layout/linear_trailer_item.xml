<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_trailers_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_trailer_thumb_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_main_height"
        android:background="@drawable/poster_stroke"
        android:contentDescription="@string/trailer_of_the_movie" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_youtube_play" />

</FrameLayout>